// Main block starts 

.hero
  background-color #f7f8f8
  .title
    background-color #00aeef
    padding 38px 0 32px 28px
    +below(400px)
      padding 30px 0 30px 10px
    h3
      padding 3px 170px 0 3px
      +below(960px)
        padding-right 70px
      +below(400px)
        padding-right 10px

.payment
  h4
    padding 42px 0 10px 30px
    +below(400px)
      padding-left 10px
  &__table
    color #8494ab
    font-size 16px
    font-weight 400
    margin 2px 0 0 26px
    +below(450px)
      font-size 14px
    +below(400px)
      margin-left 8px
    td
      width 159px
      &:last-child
        color #373c43
  h2
    padding 20px 0 0 30px
    +below(400px)
     padding-left 10px

.card
  padding-top 20px
  position relative
  &__front
    background-color #f7f8f8
    position relative
    z-index 10
    width 350px
    height 236px
    border 1px solid #e4e9ee
    border-radius 10px
    margin-left 30px
    h4
      padding 18px 0 0 14px
      margin 0
    input
      color #373c43
      width 65px
      height 42px
      border 1px solid #e4e9ee
      margin 1px -10px -4px 14.5px
      padding 0 10px 0 13px
      +below(400px)
        width 60px
        height 35px
    select
      -webkit-appearance none
      -moz-appearance none
      -ms-appearance none
      font-size 16px
      appearance none
      margin 0 -9px 0 14px
      color #373c43
      height 42px
      border 1px solid #e4e9ee
      padding 3px 0 0 14px
      background-image url(/assets/images/arrow.png)
      background-repeat no-repeat
      cursor pointer
      +below(450px)
        font-size 14px
      +below(400px)
        height 35px

    +below(400px)
      width 300px
      height 205px
      margin 0 0 0 10px
    +below(340px)
      margin 0 auto

    .holder-name
      width 319px
      +below(400px)
        width 270px
      margin 13px 14px 0 14px
      padding 2px 11px 0 11px
      &::-webkit-input-placeholder
        font-size 16px
        color #bec6cf
        +below(450px)
          font-size 14px
      &::-moz-placeholder
        font-size 16px       
        color #bec6cf
        +below(450px)
          font-size 14px
      &:-moz-placeholder
        font-size 16px
        color #bec6cf
        +below(450px)
          font-size 14px
      &:-ms-input-placeholder
        font-size 16px
        color #bec6cf
        +below(450px)
          font-size 14px
  &__month
    width 70px
    background-position 43px center
  &__year
    width 86px
    background-position 61px center
  &__reverse
    width 350px
    height 236px
    border 1px solid #e4e9ee
    border-radius 10px
    position absolute
    left 243px
    top 40px
    +below(640px)
      position relative
      left auto
      top auto
      margin 15px 0 0 30px
    +below(400px)
      width 300px
      height 205px
      margin 10px 0 10px 10px
    +below(340px)
      margin 10px auto
    h4
      float right
      padding 13px 22px 0 120px
      margin 0
    img
      position absolute 
      right 23px
      top 113px
      cursor pointer
      +below(400px)
        top 105px
  &__code
    position relative
    border 1px solid #e4e9ee
    width 138px
    height 42px
    margin-right 14px
    float right
    padding 0 40px 0 20px
    +below(400px)
      height 35px
      width 110px
  

  &__line
    height 42px
    background-color #e4e9ee
    width 100%
    margin-top 25px

.btn-pay
  font-size 14px
  font-family Open Sans, sans-serif
  font-weight 700
  color white
  margin 33px 0 51px 30px
  width 173px
  height 40px
  background-color #95bf00
  background 
    -webkit-linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  background 
    -moz-linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  background 
    -o-linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  background 
    -ms-linear-gradient(90deg, rgba(0, 0, 0, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  background 
    linear-gradient(0deg, rgba(0, 0, 0, 0.2) 0%, rgba(255, 255, 255, 0.2) 100%)
  border-radius 3px
  padding 0
  outline 0
  border 0
  cursor pointer
  transition .25s
  +below(400px)
    margin-left 10px
  &:hover
    background-color white
    color #95bf00
    border 2px solid #95bf00

// Main block ends 
     